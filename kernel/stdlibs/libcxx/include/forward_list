#pragma once
#include <vix/macros.h>
#include <vix/types.h>

#include <vix/kprintf.h>

namespace std {
    template <class T> class forward_list {
    private:
        struct list_node {
            T data;
            struct list_node *next;
        };

    public:
        // Returns number of elements in linked list.
        size_t size() {
            struct list_node *c = first;
            size_t n = 0;
            while (c != nullptr) {
                c = c->next;
                n++;
            }
            return n;
        }

        // Adds the element to the front.
        T &push_front(const T &e) {
            struct list_node *le = new struct list_node({
                .data = e,
                .next = first,
            });
            first = le;
            if (last == nullptr) {
                last = first;
            }
            return first->data;
        }

        // Returns reference to first element. UB when empty.
        T &front() {
            return first->data;
        }

        // Returns reference to last element. UB when empty.
        T &back() {
            return last->data;
        }

        // Swaps the first element with the last one. Returns first (prior to swapping) element. UB when empty.
        T &swap_first_last() {
            if (unlikely(first->next == nullptr)) {
                return first->data;
            }
            T *d = &first->data;
            last->next = first;
            last = first;
            first = first->next;
            last->next = nullptr;
            return *d;
        }

        // Removes first element that matches
        void erase_first_if(bool (*match)(const T &)) {
            struct list_node *c = first;
            struct list_node *prev = nullptr;
            while (c != nullptr) {
                if (match(c->data)) {
                    unlink_node(prev, c);
                    break;
                }
                prev = c;
                c = c->next;
            }
        }

        void erase_first_eq(const T &el) {
            struct list_node *c = first;
            struct list_node *prev = nullptr;
            while (c != nullptr) {
                if (c->data == el) {
                    unlink_node(prev, c);
                    break;
                }
                prev = c;
                c = c->next;
            }
        }

        void erase_first_ptr(const T *el) {
            struct list_node *c = first;
            struct list_node *prev = nullptr;
            while (c != nullptr) {
                if (&c->data == el) {
                    unlink_node(prev, c);
                    break;
                }
                prev = c;
                c = c->next;
            }
        }

        struct Iterator {
            Iterator(struct list_node *ptr) {
                ll_node = ptr;
            }

            T &operator*() const {
                return ll_node->data;
            }

            T *operator->() {
                return &ll_node->data;
            }

            Iterator &operator++() {
                ll_node = ll_node->next;
                return *this;
            }

            Iterator operator++(int) {
                Iterator tmp = *this;
                ++(*this);
                return tmp;
            }

            bool operator!=(const Iterator &it) {
                return ll_node != it.ll_node;
            };

            bool operator==(const Iterator &it) {
                return ll_node == it.ll_node;
            };

        private:
            struct list_node *ll_node;
        };

        Iterator begin() {
            return Iterator(first);
        }

        Iterator end() {
            return Iterator(nullptr);
        }

    private:
        struct list_node *first = nullptr;
        struct list_node *last = nullptr;

        void unlink_node(struct list_node *prev, struct list_node *el) {
            if (prev != nullptr) {
                prev->next = el->next;
            }
            if (el == first) {
                first = el->next;
            }
            if (el == last) {
                last = prev;
            }
            delete el;
        }
    };

}
